---
interface Props {
    title: string;
    body: string;
}

const { title, body } = Astro.props;
---

<div
    class="text-white p-8 flex flex-col items-center justify-center"
>
    <div class="text-center max-w-md">
        <h2 class="text-2xl font-bold mb-2">{title}</h2>
        <p class="mb-6">{body}</p>
        <div class="pt-6">
            <a href="mailto:support@jajanku.app" class="text-lg font-semibold bg-disabled py-4 px-8 rounded-md text-color-secondary-gray">support@jajanku.app</a>
        </div>
    </div>
</div>

<style>
    .text-color-secondary-gray {
        color: #cbcbcb;
    }

    .bg-disabled {
        background-color: #393939;
    }
</style>
