---
import Contact from "./Contact.astro";
---

<div
  class="relative z-10 hidden animate-show"
  aria-labelledby="modal-title"
  role="dialog"
  aria-modal="true"
  id="contact-modal"
>
  <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity" aria-hidden="true"></div>

  <div class="fixed inset-0 z-10 w-screen overflow-y-auto">
    <div class="flex min-h-full items-center justify-center p-4 text-center sm:p-0">
      <div
        class="relative transform overflow-hidden rounded-lg text-left shadow-xl transition-all sm:my-8 sm:w-full sm:max-w-lg"
        style="background-color: #080707"
      >
        <div class="px-4 pt-4 pb-8 text-center">
          <div>
            <Contact
              title="Need support?"
              body="If you require support for any difficulties, issues, or have questions about Jajanku, please contact:"
            />

            <div class="mt-4">
              <span id="modal-dismiss" class="text-zinc-300 underline cursor-pointer">Press here to close.</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .animate-hidden {
    animation: hidden 0.5s ease-in-out forwards;
  }

  @keyframes hidden {
    0% {
      opacity: 1;
      visibility: visible;
    }
    100% {
      opacity: 0;
      visibility: hidden;
    }
  }

  .animate-show {
    animation: show 0.5s ease-in-out forwards;
  }

  @keyframes show {
    0% {
      opacity: 0;
      visibility: hidden;
    }
    100% {
      opacity: 1;
      visibility: visible;
    }
  }
</style>

<script>
  const modalDismiss = document.getElementById("modal-dismiss")!;
  const contactModal = document.getElementById("contact-modal")!;

  modalDismiss.addEventListener("click", () => {
    contactModal.classList.remove("animate-show");
    contactModal.classList.add("animate-hidden");
  });
</script>