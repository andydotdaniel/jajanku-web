---
interface Props {
	text: string;
	authorName: string;
	authorTitle: string;
}

const { text, authorName, authorTitle } = Astro.props;
---

<div class="opacity-55">
    <div>
        <img src="/img/quote.svg" class="w-10 h-10">
        <p class="text-2xl mt-2 font-bold"><i>{text}</i></p>
    </div>
    
    <div class="mt-6">
        <p class="text-lg font-bold">{authorName}</p>
        <p class="text-sm">{authorTitle}</p>
    </div>
</div>