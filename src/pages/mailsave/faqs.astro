---
export const prerender = false;

import DarkLayout from "../../layouts/DarkLayout.astro";
import Contact from "../../components/Contact.astro";
import Accordion from "../../components/Accordion.astro";

import strings from "../../strings.json";

const languageCode = Astro.url.searchParams.get('lang') || 'en';
const faqs = strings[languageCode as keyof typeof strings].faqs.content;
const preTitle = strings[languageCode as keyof typeof strings].faqs.preTitle;

const contact = strings[languageCode as keyof typeof strings].faqs.contact;
---

<DarkLayout title="FAQs - Jajanku">
    <div class="container mx-auto md:px-8 px-6 pb-16 pt-8" style="max-width:960px;">
        <div class="mb-6">
            <span class="md:block hidden text-sm font-semibold mt-2 text-gray-400 mb-1">Jajanku</span>
        </div>

        <h1 class="md:text-6xl text-4xl font-bold mb-4 text-white">
            {preTitle} <span class="text-color-primary-active">MailSave</span>
        </h1>

        <Accordion data={faqs} />
    </div>

    <hr class="border-gray-600" />
    <div class="py-12">
        <Contact
            title={contact.title}
            body={contact.body}
        />
    </div>
</DarkLayout>
